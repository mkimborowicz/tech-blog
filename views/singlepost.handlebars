<div class="card" style="width: 40rem;">
  <div class="card-body">

    <h6 class="card-subtitle mb-2 text-muted">posted by {{user.username}} on {{format_date createdAt}}</h6>
    <h4 class="card-title">{{title}}</h4>
    <p class="card-text">{{content}}</p>
  </div>

</div>

{{#if Comments}}
  <h3>Comments:</h3>
    <div class="card" style="width: 40rem;">
    <div class="card-body">
      {{#each Comments}}
        <div>
          <h6 class="card-subtitle mb-2 text-muted">posted by {{user.username}} on {{format_date createdAt}}</h6>
      
          <p class="card-text">{{commentText}}</p>
        </div>
      {{/each}}
    </div>

  </div>

{{/if}}
<form id = "submit-comment">
<div class="card" style="width: 40rem;">
  <div class="card-body">
    <h5 class="card-title">Leave a Comment:</h5>
    <input type="hidden" class="form-control" id="post-id" value="{{id}}" />
    <textarea class="form-control" id="comment-box"></textarea>
  </div>

  <button type="submit" class="btn btn-dark">Submit</button>
</div>
</form>
<script src = "/js/comment.js"></script>