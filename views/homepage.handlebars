
    {{#each blogPosts}}
  <div class="card" style="width: 40rem;">
  <div class="card-body">

    <h6 class="card-subtitle mb-2 text-muted">Posted By: {{user.username}} on {{format_date createdAt}}</h6>
    <a href="/posts/{{id}}"><h4 class="card-title">{{title}}</h4></a>
    <p class="card-text">{{content}}</p>
  </div>

</div>
    {{/each}}

<script src = "/js/new.js"></script>